<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.MainWindowController" 
            prefHeight="400"
            prefWidth="600" 
            xmlns="http://javafx.com/javafx/8"
            fx:id="rootPane">
    <!-- 1. Menu and Search bars -->
    <top>
        <VBox BorderPane.alignment="CENTER">
            <!-- 1.1 Menu bar-->
            <MenuBar>
                <Menu text="File">
                    <MenuItem fx:id="menu_file_open" text="Open" onAction="#openImagesFolder"/>
                    <MenuItem fx:id="menu_file_save" text="Save" onAction="#saveImageMetadata"/>
                    <MenuItem fx:id="menu_file_exit" text="Exit" onAction="#closeProgram"/>
                </Menu>
                <Menu text="Options">
                    <MenuItem text="Generate image report"/>
                    <MenuItem text="Generate tags report"/>
                    <MenuItem text="Photographers" onAction="#showPhotographers"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="Help" onAction="#showHelp"/>
                    <MenuItem text="About" onAction="#showAbout"/>
                </Menu>
            </MenuBar>
            <!-- 1.2 Search bar-->
            <HBox>
                <Region maxHeight="-Infinity" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <TextField promptText="Search"/>
                <Button mnemonicParsing="false" text="Search">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </top>
