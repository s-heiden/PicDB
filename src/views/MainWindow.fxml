                                        <VBox.margin>
                                            <Insets bottom="5.0" left="5.0" top="5.0"/>
                                        </VBox.margin>
                                    </HBox>
                                </VBox>
                            </Tab>
                            <Tab text="EXIF">
                                <VBox>
                                    <ScrollPane prefViewportHeight="167.0"
