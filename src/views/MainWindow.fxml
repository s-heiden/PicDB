                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0"
                                                                prefHeight="30.0"
                                                                vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                        </GridPane>
                                    </ScrollPane>
                                    <HBox>
                                        <Button fx:id="exif_edit_btn" text="Edit" onAction="#editExif">
                                            <HBox.margin>
